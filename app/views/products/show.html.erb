<div class="row">
  <%= content_tag(:div, content_tag(:h2, @product.name), class: 'col-md-12') %>
</div>
<div class="row">
  <%= content_tag(:div, @product.description, class: 'col-md-6') %>
  <%= content_tag(:div, number_to_currency(@product.price_in_dollars), class: 'col-md-6') %>
</div>
<div class="row">
  <div class="col-md-12">
    <%= link_to('Edit', edit_product_path(@product), class: 'btn btn-warning') %>
    <%= link_to('Delete', product_path(@product), class: 'btn btn-danger', method: :delete) %>
  </div>
</div>

<% if current_user %>
    <div class="row">
      <div class="col-md-12" id="reviews"><h3>Reviews</h3>

        <p>Reviews for <%= @product.name %></p>
        <% @product.reviews.each do |review| %>
            <p>
              <%= review.comment %>
              <br>
              <% if review.user != nil %>
                  <em> by <%= review.user.email %></em> Added on: <%= review.created_at %>
              <% end %>
            </p>
        <% end %></div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <h4>New Review</h4>
        <%= form_for ([@product, @review]) do |f| %>
            <% if @review.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

                  <ul>
                    <% @review.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>
            <div class="field">
              <%= f.label :comment %>
              <br/>
              <%= f.text_area :comment %>
            </div>
            <div class="actions">
              <%= f.submit %>
            </div>
            </div></div>
        <% end %>

<% else %>
    <p>Please <%= link_to "log in", new_session_path %> to add a review.</p>
<% end %>