$(document).ready(function(){
    $('#new_review').submit(function(event){
        event.preventDefault();
        $.ajax({
            url: $('#new_review').attr('action'),
            type: 'POST',
            data: {review: {comment: $('#review_comment').val()}},
            dataType: 'script',
            beforeSend: function(){
                $('input[type=submit]').
                        val('Saving').
                        attr('disabled','disabled');
            },
            complete: function(){
                $('input[type=submit]').
                        val('Create Review').
                        removeAttr('disabled');
            }
        });
    });

});
